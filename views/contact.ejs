<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
</head>

<body class="contact-page">

    <%- include('./partials/nav') %>

  <main class="main">

    <!-- Contact Section -->
    <section id="contact" class="contact section">

      <!-- Section Title -->
      <div class="container section-title" data-aos="fade-up">
        <h2>Contact</h2>
        <p>You can contact me directly via the form below or connect with me through my social media profiles.</p>
      </div><!-- End Section Title -->

      <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4">

          <div class="col-lg-5">

            <div class="info-wrap">
              <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="200">
                <i class="bi bi-geo-alt flex-shrink-0"></i>
                <div>
                  <h3>Address</h3>
                  <p>Rampark Society, Ajwa Rd., Vadodara, Gujarat</p>
                </div>
              </div><!-- End Info Item -->

              <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="300" onclick="whatsappchat()" style="cursor:pointer;">
                  <i class="bi bi-whatsapp flex-shrink-0"></i>
                  <div>
                    <h3>Whatsapp Me</h3>
                    <p>+91 7041389236</p>
                  </div>
              </div><!-- End Info Item -->
              

              <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="400" onclick="emailchat()" style="cursor:pointer;">
                <i class="bi bi-envelope flex-shrink-0"></i>
                <div>
                  <h3>Email Me</h3>
                  <p>aliabbasbhaisaheb22@gmail.com</p>
                </div>
              </div><!-- End Info Item -->

            </div>
          </div>

          <div class="col-lg-7">
            <form action="/user/addUserContactMessage" method="post" data-aos="fade-up" data-aos-delay="200">
                <div class="row gy-4">
              
                  <div class="col-md-6">
                    <label for="n1" class="form-label">Your Name</label>
                    <input type="text" name="n1" id="n1" class="form-control" required>
                  </div>
              
                  <div class="col-md-6">
                    <label for="email-field" class="form-label">Your Email</label>
                    <input type="email" class="form-control" name="email" id="email-field" required>
                  </div>
              
                  <div class="col-md-12">
                    <label for="subject-field" class="form-label">Subject</label>
                    <input type="text" class="form-control" name="subject" id="subject-field" required>
                  </div>
              
                  <div class="col-md-12">
                    <label for="message-field" class="form-label">Message</label>
                    <textarea class="form-control" name="message" rows="5" id="message-field" required></textarea>
                  </div>
                
                    <div class="col-md-12 d-flex align-items-center justify-content-center">
                        <button type="submit" class="btn btn-primary">Send Message</button>
                    </div>
              
                </div>
              </form>

              
              
          </div><!-- End Contact Form -->

        </div>

      </div>

      <script>
        function whatsappchat(){
            window.location.href="https://wa.me/+917041389236";
        }
        function emailchat(){
            window.location.href="mailto:aliabbasbhaisaheb22@gmail.com";
        }
      </script>


    </section><!-- /Contact Section -->

  </main>

  <!-- Scroll Top -->
  <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <!-- Preloader -->
  <div id="preloader"></div>

  <%- include('./partials/foot') %>

</body>

</html>